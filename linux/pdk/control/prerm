#!/bin/sh

# Stop org.webosinternals.pdk
if [ -f /etc/event.d/org.webosinternals.pdk ]; then
    /sbin/stop org.webosinternals.pdk
fi

# Remove the upstart script
rm -f /etc/event.d/org.webosinternals.pdk

# Unmount /usr/local
umount /usr/local

# Unmount the install convenience mount
if grep -q /media/cryptofs/apps /etc/palm/luna.conf ; then
  umount /media/cryptofs/apps/usr/local
fi

exit 0
