NAME = $(shell basename $(shell pwd))
PATCH = screen-lock/${NAME}.patch
TITLE = Limited Emergency Button
DESCRIPTION = This will reduce the chance of accidentally calling 911. It removes the prepopulated number that appears in the dialpad once you select the Emergency Call button on the PIN screen, forcing the user to manually input the emergency number.
CATEGORY = Screen Lock
VERSION = 1.2.1-6
